#include <iostream>
using namespace std;
int main ()
{
    string password;
    while (true) {
        cout << "Enter Password: ";
        cin >> password;
        if (password == "Python123") {
            cout << "correct password" << endl;
            break ;
        }
        else {
            cout << "Incorrect password" <<endl;
        }
    } return 0 ;
}


#include <iostream>
using namespace std;
int main() {
    int row;
  cout << "Enter rows  ";
   cin >> row;
    for (int x = 1; x <= row; ++x) {
        
        for (int y = 1; y <= row - x; ++y) 
        {
            cout << " ";
        }
        for (int z = 1; z <= (2 * x - 1); ++z) {
         cout << "*";
        }

       cout << "\n";
    }
 return 0;
    
}
